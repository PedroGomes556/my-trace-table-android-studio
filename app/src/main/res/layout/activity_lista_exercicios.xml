<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ListaExercicio">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarListaExercicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/id_text_nome_app"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:fontFamily="@font/poppins_black"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/background_button_color"
        android:textColorHint="@color/background_button_color"
        android:textColorLink="@color/background_button_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_exercicio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_button_color"
            android:fontFamily="@font/poppins"
            android:onClick="IniciarExercicio1"
            android:text="EXERCÍCIO 1"
            android:textColor="@color/white"
            android:textColorLink="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_exercicio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_button_color"
            android:fontFamily="@font/poppins"
            android:onClick="IniciarExercicio2"
            android:text="EXERCÍCIO 2"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_exercicio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_button_color"
            android:fontFamily="@font/poppins"
            android:onClick="IniciarExercicio3"
            android:text="EXERCÍCIO 3"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_text_legenda"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/background_button_color"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:text="Operadores Aritméticos"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_text_nome_app" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="46dp"
        android:layout_height="60dp"
        android:layout_marginEnd="32dp"
        android:background="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>